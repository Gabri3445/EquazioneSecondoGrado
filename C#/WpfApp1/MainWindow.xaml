<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Git Installer" Height="516" Width="800"
        ResizeMode="CanMinimize"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Margin="40,0,40,83" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label>Games</Label>
                <CheckBox Margin="10" Name="SteamCheck">
                    <TextBlock>
                        Steam
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="DiscordCheck">
                    <TextBlock>
                        Discord
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="uTorrentCheck">
                    <TextBlock>
                        uTorrent
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="MinecraftPRCheck">
                    <TextBlock>
                        Minecraft Premium
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="EpicGamesCheck">
                    <TextBlock>
                        Epic Games
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="BattleNetCheck">
                    <TextBlock>
                        Battle.Net
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="LogitechCheck">
                    <TextBlock>
                        Logitech G HUB
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="OriginCheck">
                    <TextBlock>
                        Origin
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="MinecraftCRCheck">
                    <TextBlock>
                        Minecraft (Cracked)
                    </TextBlock>
                </CheckBox>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label>Developing</Label>
                <CheckBox Margin="10" Name="VS2022Check">
                    <TextBlock>
                        Visual Studio 2022
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="VSCCheck">
                    <TextBlock>
                        Visual Studio Code
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="SublimeTextCheck">
                    <TextBlock>
                        Sublime Text
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="PyCharmCheck">
                    <TextBlock>
                        PyCharm
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="BlenderCheck">
                    <TextBlock>
                        Blender
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="EclipseCheck">
                    <TextBlock>
                        Eclipse
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="DevCCheck">
                    <TextBlock>
                        Dev CPP
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="NodeJSCheck">
                    <TextBlock>
                        NodeJS
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="QtDesigner">
                    <TextBlock>
                        QT Designer
                    </TextBlock>
                </CheckBox>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Label>Utilities</Label>
                <CheckBox Margin="10" Name="AMDCheck">
                    <TextBlock>
                        AMD Radeon Software
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="WinRarCheck">
                    <TextBlock>
                        WinRar
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="SevZipCheck">
                    <TextBlock>
                        7-Zip
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="OBSCheck">
                    <TextBlock>
                        OBS
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="GeForceCheck">
                    <TextBlock>
                        GeForce
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="VirtualBoxCheck">
                    <TextBlock>
                        VirtualBox
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="SpotifyCheck">
                    <TextBlock>
                        Spotify
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="VLCCheck">
                    <TextBlock>
                        VLC
                    </TextBlock>
                </CheckBox>
                <CheckBox Margin="10" Name="AdobeInstallerCheck">
                    <TextBlock>
                        Adobe Installer
                    </TextBlock>
                </CheckBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="80" Height="30" Name="PathChoose" Click="PathChoose_Click">Choose Path</Button>
            <TextBlock Grid.Column="1" Name="PathText" HorizontalAlignment="Center" VerticalAlignment="Center">Path not set!</TextBlock>
            <Button Grid.Column="2" Width="80" Height="30" Name="AuthorName" Click="AuthorName_Click">Author</Button>
            <Button Grid.Column="3" Width="80" Height="30" Name="InstallButton" Click="InstallButton_Click">Install</Button>
        </Grid>
    </Grid>
</Window>
